{
  "extends": "@total-typescript/tsconfig/tsc/no-dom/library-monorepo",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "~/api/*": ["./src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
